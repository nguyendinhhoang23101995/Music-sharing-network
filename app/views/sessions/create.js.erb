$('.ui.form').removeClass('loading')
<% if logged_in? %>
  Turbolinks.visit('<%= root_path %>');
<% else %>
  $('.ui.form .button').removeClass("disabled");
  $('.login-form').find('.field').addClass('error')
  $errors = $('#login-errors');
  $errors.addClass('ui error message');
  <% if @inactivation %>
    $errors.html($('.errors-info').data('inactivation'));
  <% else %>
    $errors.html($('.errors-info').data('error'));
  <% end %>
    $errors.transition('error');
  $errors.show();
<% end %>